{
  "manifest_version": 2,

  "name": "Perfect! Reader",
  "description": "Read, compulsively.",
  "version": "0.01",

  "background": {
      "persistent": false,
      "scripts": ["background.js"]
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js":      ["content.js"]
  }],

  "browser_action": {
      "default_title": "Perfect! Reader",
      "default_icon": "images/icon.png"
  },


  "permissions": [
      "activeTab"
  ]
}
